<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d0ffdc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/startImage"
            android:layout_width="204dp"
            android:layout_height="184dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/lodo_diliver__1_" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="Enjoy Dil Se."
            android:textColor="#5F8E52"
            android:textSize="40sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/LoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/alata"
            android:text="Signup"
            android:textColor="#5F8E52"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNameSignup"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/field_edit_text"
            android:drawableLeft="@drawable/baseline_person_24"
            android:hint="  Enter Name"
            android:paddingStart="10dp"
            android:textColor="#1B380E"
            android:textColorHint="#9E9B9B"
            android:fontFamily="@font/viga" />

        <EditText
            android:id="@+id/editTextEmailSignup"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/field_edit_text"
            android:drawableLeft="@drawable/baseline_email_24"
            android:hint="  Enter Email"
            android:paddingStart="10dp"
            android:textColor="#1B380E"
            android:textColorHint="#9E9B9B"
            android:fontFamily="@font/viga" />

        <EditText
            android:id="@+id/editTextPasswordSignup"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/field_edit_text"
            android:drawableLeft="@drawable/baseline_password_24"
            android:hint="  Enter Password"
            android:paddingStart="10dp"
            android:textColor="#1B380E"
            android:textColorHint="#9E9B9B"
            android:fontFamily="@font/viga" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginButtonSignup"
            android:layout_width="150dp"
            android:layout_height="57dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/greenbutton"
            android:gravity="center"
            android:text="Signup"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/haveAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Already have an account? Click here."
            android:textColor="#5F8E52" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="#1D4F1B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="or"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="#1D4F1B" />
        </LinearLayout>

        <TextView
            android:id="@+id/continueWithText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/viga"
            android:text="Signup With"
            android:textColor="#5F8E52"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Google"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/developedCreditStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed in hunger by "
                android:textColor="#1D4F1B"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="98dp"
                android:layout_height="28dp"
                android:src="@drawable/logo_exact_removebg_preview" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="#1D4F1B"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
